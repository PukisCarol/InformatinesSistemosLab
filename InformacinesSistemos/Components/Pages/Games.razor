@page "/games"

<h3>Žaidimų sąrašas</h3>

<p>Čia matysi visus stalo ir kompiuterinius žaidimus, kuriuos galima nuomoti ar pirkti.</p>

<button class="btn btn-primary me-2" @onclick="CreateGame">+ Paskelbti naują žaidimą</button>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Pavadinimas</th>
            <th>Kategorija</th>
            <th>Kaina</th>
            <th>Veiksmai</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Monopolis</td>
            <td>Stalo</td>
            <td>10 €</td>
            <td>
                <button class="btn btn-success btn-sm me-2" @onclick="AddToCart">Į krepšelį</button>
                <NavLink class="btn btn-secondary btn-sm" href="/game/1">Peržiūrėti</NavLink>
            </td>
        </tr>
    </tbody>
</table>

@code {
    void CreateGame() => NavigationManager.NavigateTo("/game/new");
    void AddToCart() => NavigationManager.NavigateTo("/mygames");

    [Inject]
    NavigationManager NavigationManager { get; set; }
}
