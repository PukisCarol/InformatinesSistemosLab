@page "/moderation/reviews"
@using InformacinesSistemos.Models
@using Microsoft.AspNetCore.Components.Authorization
@inject InformacinesSistemos.Services.IUserService UserService
@inject InformacinesSistemos.Services.IReviewService ReviewService
@inject NavigationManager Nav

<PageTitle>Atsiliepimų peržiūra</PageTitle>

<AuthorizeView Roles="Moderator,Admin">
    <Authorized>
        <h2>Atsiliepimų peržiūra ir valdymas</h2>

        @if (reviews is null)
        {
            <p>Kraunama...</p>
        }
        else if (!reviews.Any())
        {
            <p>Nerasta atsiliepimų.</p>
        }
        else
        {
            <table class="users-table">
                <thead>
                    <tr>
                        <th>Data</th>
                        <th>Atsiliepimas</th>
                        <th>Įvertinimas</th>
                        <th>Trinti</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in reviews)
                    {
                        <tr>
                            <td>@u.Data.ToShortDateString()</td>
                            <td>@u.AtsiliepimoTekstas</td>
                            <td>@u.Ivertinimas</td>
                            <td>
                                <button class="outline-btn small danger"
                                        @onclick="() => DeclineReview(u.AtsiliepimoId)">
                                    Trinti
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </Authorized>
    <NotAuthorized>
        <p>Šis puslapis prieinamas tik moderatoriams ir administratoriams.</p>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<Atsiliepimas>? reviews;

    protected override async Task OnInitializedAsync()
    {
        await LoadReviews();
    }

    private async Task LoadReviews()
    {
        reviews = await ReviewService.GetAllAsync();
    }

    private async Task AcceptReview(int atsiliepimoId)
    {
        // If you add a "Priimtas" column later, uncomment this:
        // await ReviewService.AcceptReviewAsync(atsiliepimoId);
        // await LoadReviews();

        // Temporary placeholder:
        Console.WriteLine($"Accepted review ID: {atsiliepimoId}");
    }

    private async Task DeclineReview(int atsiliepimoId)
    {
        if (reviews == null) return;

        var confirm = await JS.InvokeAsync<bool>("confirm", "Ar tikrai norite trinti atsiliepimą?");
        if (!confirm) return;

        await ReviewService.DeleteReviewAsync(atsiliepimoId);

        // Remove from the list so UI updates immediately
        var review = reviews.FirstOrDefault(r => r.AtsiliepimoId == atsiliepimoId);
        if (review != null)
            reviews.Remove(review);
    }

    [Inject] private IJSRuntime JS { get; set; } = default!;
}